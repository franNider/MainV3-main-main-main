<h1>Editar Perfil</h1>
<%= form_with(model: @profile, url: edit_profile_path(@profile), method: :patch, local: true) do |form| %>
    <div class="form-row">
    <div class="form-group col-md-2">
      <%= form.label :nombre %>
      <%= form.text_field :nombre, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <%= form.label :apellido %>
      <%= form.text_field :apellido, class: "form-control" %>
    </div>
    <div class="form-group col-md-3">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group col-md-2">
      <%= form.label :dni %>
      <%= form.number_field :dni, class: "form-control" %>
    </div>
   </div>
      <div class="form-row">
    <div class="form-group col-md-1.5">
       <%= form.submit "Confirmar los datos", class: "btn btn-success"%>
     </div>
   <div class="form-group col-md-1">
       <%=link_to "Cancelar", profile_path(@profile), {class: "btn btn-danger"}%>
     </div>
  </div>


<% end %>